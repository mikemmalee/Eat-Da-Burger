    
<div class="container">

    <h1>Eat Da Burger!</h1>

    <form class="create-form">
        <div class="form-group">
            <input type="text" id="burger" name="burger_name">
            <span class="btn">
                <button type="submit">Add Burger</button>
            </span>
        </div>
    </form>

    <div class="row">
        <div class="col-sm-6">
            <h2>Hot Off the Grill!</h2>
                {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <h2>Burgers Eaten:</h2>
                {{#each burgers}}
                {{#if devoured}}
                    <p>{{burger_name}}</p>
                {{/if}}
                {{/each}}
        </div>
    </div>

</div>









